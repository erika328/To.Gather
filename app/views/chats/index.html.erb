<div class="relative h-full">
<div class="sticky top-0 navbar bg-secondary text-gray-600 z-10">
  <div class="btn btn-ghost text-xl">
      <%= @group.title %>
    </div>
  </div>
<div class="overflow-y-scroll pb-28">
    <div class="text-gray-600 mb-5 px-5 ", id="scroller_inner">
      <turbo-frame  id="chats">
        <%= turbo_stream_from @group %>
        <%= render @chats %>
      </turbo-frame>
    </div>
</div>
 <%= link_to group_events_path(@group), class: "btn fixed bottom-56 right-12 rounded-full w-16 py-8 text-primary text-center" do %><i class="fa-solid fa-chevron-left fa-lg"></i><% end %>   
</div>
<div class="fixed bottom-32 md:bottom-16 w-full">
  <%= render partial: "form", locals: { group: @group, chat: @chat } %>
<div>
<div class="fixed bottom-0 w-full">
    <%= render "shared/footer" %>
  </div>
</div>
<script>
  function scrollToElement() {
    const scrollerInner = document.getElementById("scroller_inner");
    if (scrollerInner) {
      scrollerInner.scrollIntoView({ block: 'end' });
    }
  }
  document.addEventListener("DOMContentLoaded", scrollToElement);
  document.addEventListener("turbo:load", scrollToElement);
</script>

