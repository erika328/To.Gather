<h2><%= t "devise.invitations.new.header" %></h2>

<%= form_for(@user, as: :user, url: user_invitation_path, html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <% @user.class.invite_key_fields.each do |field| -%>
    <div class="field">
      <%= f.text_field field, :placeholder => "例：xxx＠xx.com" %>
      <%= f.hidden_field :group_id, value: (params[:group] || @group.id) %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t("devise.invitations.new.submit_button") %>
  </div>
<% end %>
