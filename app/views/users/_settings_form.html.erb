<!-- app/views/users/_settings_form.html.erb -->

<%= form_for(current_user, url: user_registration_path, method: :put, remote: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: current_user %>
  <div class="mb-4">
    <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :name, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.email_field :email, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :introduction, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_area :introduction, class: "form-input mt-1 block w-full" %>
  </div>
teamplan/app/views/layouts/application.html.erb
  <div class="mb-4">
    <%= f.label :profile_image %>
          <%= f.file_field :profile_image, class: 'form-control mb-3', accept: 'image/*' %>
          <%= f.hidden_field :profile_image_cache %>
          <div class='mt-3 mb-3'>
            <%= image_tag current_user.profile_image.url,
                          class: 'rounded-circle',
                          id: 'preview',
                          size: '100x100' %>
          </div>
  </div>

  <div class="flex items-center justify-end mt-4">
    <%= f.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
