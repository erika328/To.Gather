<%= form_with(model: @event, local: true) do |f| %>

  <%= f.hidden_field :group_id, value: @group.id %>
  <div class="title">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="time">
    <%= f.label :start_time %>
    <%= f.datetime_field :start_time %>
  </div>

  <div class="time">
    <%= f.label :end_time %>
    <%= f.datetime_field :end_time %>
  </div>

  <div class="description">
    <%= f.label :description%>
    <%= f.text_area :description, class: "form-control", row: "10", style: "height: 200px" %>
  </div>

  <div class="submit">
    <%= f.submit %>
  </div>

<% end %>