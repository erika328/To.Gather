<%= turbo_frame_tag dom_id(@event) do %>
  <% if @event.errors.any? %>
    <div id="error_explanation" class="text-red-600">
      <h2>編集できませんでした。</h2>
      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <div class="flash flex items-center p-4 mb-4 text-sm text-red-800 border border-red-300 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 dark:border-red-800 flex items-center p-4 mb-4  "><i class="fa-solid fa-circle-info"></i><%= message %></div>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(model: @event, url: group_event_path(@group, @event), local: true, method: :patch) do |f| %>
    <div>
      <div class="title">
        <%= f.label :title, class: "px-1" %>
        <%= f.text_field :title, autofocus: true, id: "title", class: "block w-full px-5 py-3 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
      </div>

      <div class="time">
        <%= f.label :start_time, class: "px-1" %>
        <%= f.datetime_field :start_time, class: "block w-full px-5 py-3 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
      </div>

      <div class="time">
        <%= f.label :end_time, class: "px-1" %>
        <%= f.datetime_field :end_time, class: "block w-full px-5 py-3 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
      </div>

      <div class="description">
        <%= f.label :description, class: "px-1" %>
        <%= f.text_area :description, class: "block w-full px-5 py-3 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", row: "10", style: "min-height: 150px" %>
      </div>

      <div class="flex space-x-3 justify-center">
        <div class="flex flex-col w-3/4 mt-3">
          <%= f.submit class: "w-full text-xs rounded-lg drop-shadow-lg bg-primary text-secondary hover:bg-accent hover:drop-shadow-none py-3" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>