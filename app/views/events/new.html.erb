<div class="flex items-center justify-center h-screen bg-gray-100">
  <div class="bg-white py-6 rounded-md px-10 max-w-lg shadow-md space-y-5">
    <div>
      <h1 class="text-center text-xl font-bold text-gray-600">
        イベント作成
      </h1>
      <p class="text-base text-gray-500 text-center">
        <%= @group.title %>のイベントを作成中
      </p>
    </div>
    <div>
    <%= form_with(model: @event, url: group_events_path(@group, @event), local: true) do |f| %>
      <div class="space-y-5">
        <div class="title">
          <%= f.label :title, class: "text-lg text-gray-600 px-1" %>
          <%= f.text_field :title, autofocus: true, id: "title", class: "block w-full px-5 py-3 text-lg text-neutral-600 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
        </div>

        <div class="time">
          <%= f.label :start_time, class: "text-lg text-gray-600 px-1" %>
          <%= f.datetime_field :start_time, class: "block w-full px-5 py-3 text-lg text-neutral-600 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
        </div>

        <div class="time">
          <%= f.label :end_time, class: "text-lg text-gray-600 px-1" %>
          <%= f.datetime_field :end_time, class: "block w-full px-5 py-3 text-lg text-neutral-600 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
        </div>

        <div class="description">
          <%= f.label :description, class: "text-lg text-gray-600 px-1" %>
          <%= f.text_area :description, class: "block w-full px-5 py-3 text-lg text-neutral-600 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", row: "10", style: "height: 150px" %>
        </div>

        <div class="flex flex-col mt-4 lg:space-y-2">
          <%= f.submit class: "flex items-center justify-center w-full px-4 py-3 text-lg font-medium text-center text-gray-600 transition duration-500 ease-in-out transform bg-yellow-100 rounded-xl hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>