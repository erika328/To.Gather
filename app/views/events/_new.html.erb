<div class="flex items-center justify-center">
  <div class="rounded-md w-full space-y-5 text-gray-600 px-5">
    <div class="text-center">
      <h1 class="text-lg font-semibold">
        イベント作成
      </h1>
      <p class="text-base text-gray-500 text-sm">
        <%= @group.title %>のイベントを作成
      </p>
      <span class="text-red-400 text-sm">※すべて必須</span>
    </div>
    <div>
    <%= form_with(model: @event, url: group_events_path(@group, @event), local: true) do |f| %>
      <div class="space-y-5">
        <div class="title">
          <%= f.label :title, class: "text-sm px-1" %><span class="text-gray-400 text-sm ml-2">※15文字以内</span>
          <%= f.text_field :title, autofocus: true, id: "title", class: "block w-full px-5 py-3 text-sm text-neutral-600 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
        </div>

        <div class="time">
          <%= f.label :start_time, class: "text-sm px-1" %>
          <%= f.datetime_field :start_time, class: "block w-full px-5 py-3 text-sm text-neutral-600 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
        </div>

        <div class="time">
          <%= f.label :end_time, class: "text-sm px-1" %>
          <%= f.datetime_field :end_time, class: "block w-full px-5 py-3 text-sm text-neutral-600 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
        </div>

        <div class="description">
          <%= f.label :description, class: "text-sm px-1" %><span class="text-gray-400 text-sm ml-2">※200文字以内</span>
          <%= f.text_area :description, class: "block w-full px-5 py-3 text-sm text-neutral-600 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", row: "10", style: "height: 150px" %>
        </div>

        <div class="flex items-center justify-center mt-4 lg:space-y-2">
          <%= f.submit class: "flex items-center justify-center w-20 px-4 py-3 text-sm font-medium text-center text-secondary transition duration-500 ease-in-out transform bg-primary rounded-xl hover:bg-accent focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>