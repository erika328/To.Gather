<div class="container mx-auto">
<h2>Sign up</h2>

<%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="mx-auto field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <button class="rounded-full drop-shadow-lg bg-yellow-100 hover:bg-yellow-300 hover:drop-shadow-none px-4 py-2">
    <%= f.submit "Sign up" %>
  </button>
<% end %>

<%= render "devise/shared/links" %>
</div>
<div class="fixed bottom-8 right-8 rounded-full w-24 py-9 bg-yellow-100 text-gray-600 text-center ring-8 ring-offset-2 ring-cyan-100 hover:ring-offset-8">
  <%= link_to 'TOPへ戻る', root_path %>   
  </div>
