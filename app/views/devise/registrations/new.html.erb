  <section class='bg-secondary'>
  <div class="px-4 py-12 mx-auto max-w-7xl sm:px-6 md:px-12 lg:px-24 lg:py-24">
    <div class="justify-center mx-auto text-left align-bottom transition-all transform bg-white rounded-lg sm:align-middle sm:max-w-2xl sm:w-full">
      <div class="grid flex-wrap items-center justify-center grid-cols-1 mx-auto shadow-xl lg:grid-cols-2 rounded-xl">
        <div class="w-full px-6 py-3">
          <div>
            <div class="mt-3 text-left sm:mt-5">
              <div class="inline-flex items-center w-full">
                <h3 class="text-lg font-bold text-neutral-600 l eading-6 lg:text-5xl"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Sign Up</font></font></h3>
              </div>
              <div class="mt-4 text-base text-gray-500">
                <p><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">SignUpして使ってみよう。</font></font></p>
              </div>
            </div>
          </div>

          
          <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="mt-6 space-y-2">
            <div>
          <%= f.label :name, class: "sr-only" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", id: "name", class: "block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", placeholder: "ユーザーネーム" %>
        </div>
            <div>
            <%= f.label :email, class: "sr-only" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", class: "block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", placeholder: "メールアドレス" %>
            </div>
            <div>
            <%= f.label :password, class: "sr-only" %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", id: "name", class: "block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", 
              placeholder: "パスワード#{ @minimum_password_length.present? ? "（#{@minimum_password_length}文字以上）" : '' }" %>
            </div>
            <div>
            <%= f.label :password_confirmation, class: "sr-only" %>
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", id: "name", class: "block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", 
              placeholder: "パスワード確認" %>
            </div>
            <div class="flex flex-col mt-4 lg:space-y-2">
              <button class="flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-secondary transition duration-500 ease-in-out transform bg-primary rounded-xl hover:bg-accent focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              <%= f.submit "Sign up" %>
              </button>
            </div>
          </div>
        </div>
        <% end %>
        <div class="order-first hidden w-full lg:block">
          <%= image_tag "/images/signin.jpg", class: "object-cover h-full bg-cover rounded-l-lg", alt:"" %>
        </div>
      </div>
    </div>
  </div>
</section>