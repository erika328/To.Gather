<div class="col-md-9 mx-auto text-center mt-5 text-gray-600">
    <h1 class="text-2xl py-10 font-semibold"><%= @group.title %>グループの参加申請一覧</h1>
  <div class="w-4/5 mx-auto" >
    <div class="overflow-x-auto">
      <table class="table">
    <thead>
      <tr>
        <th class="w-1/3">名前</th>
        <th>自己紹介</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @permits.each do |permit| %>
      <tr>
        <td>
          <div class="flex items-center gap-3">
            <div class="avatar">
              <div class="mask mask-squircle w-12 h-12">
                <%= image_tag permit.user.profile_image.present? ? permit.user.profile_image.url : "default.png" %>
              </div>
            </div>
            <div>
              <div class="font-bold">
                <div>
                   <p><%= permit.user.name %></p>
                </div>
              </div>
            </div>
          </div>
        </td>
        <td class="text-left"> 
          <%= permit.user.introduction %>
          <br/>
        </td>
        <td class="text-right">
          <%= link_to '許可', group_group_users_path(@group, permit_id: permit.id), data: { turbo_method: :post }, class: "rounded-lg drop-shadow-lg border-2 bg-primary text-secondary hover:bg-accent hover:drop-shadow-none px-2 py-1" %>
          <%= link_to '拒否', group_group_users_path(@group, permit_id: permit.id), data: { turbo_method: :delete }, class: "text-primary rounded-lg border-2 border-primary hover:bg-gray-200 px-2 py-1" %>
        </td>
      </tr>
      <tr></tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>