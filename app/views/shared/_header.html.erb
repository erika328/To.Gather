<header class="bg-cyan-100 text-gray-600">
<div class="container mx-auto flex justify-between items-center px-8 py-2 text-lg">
  <div class="space-x-3">
  <button class="rounded-lg drop-shadow-lg bg-yellow-100 hover:bg-yellow-300 hover:drop-shadow-none px-2 py-2">
      <i class="fa-solid fa-gear fa-xl"></i>
  </button>
  <button class="rounded-lg drop-shadow-lg bg-yellow-100 hover:bg-yellow-300 hover:drop-shadow-none px-2.5 py-2">
    <i class="fa-regular fa-calendar-check fa-xl"></i>
  </button>
  </div>
  <div>
    <ul>
     <li class="relative" id="hamburger-wrapper">
       <i class="fa-solid fa-bars fa-xl cursor-pointer" id="hamburger-icon""></i>
        <ul class="hidden absolute right-0 mt-0 p-2 w-48 px-2 py-6 bg-yellow-100 space-x-5 border rounded-l-lg shadow-lg" id="menu-list">
          <li class="border-b-4 border-white">Menu</li>
          <li><%= link_to 'マイカレンダー', '#'%></li>
          <li><%= link_to 'カレンダー作成', '#' %></li>
          <li><%= link_to 'ログアウト', '#' %></li>
        </ul>
      </li>
    </ul>
  </div>
</div>
</header>

<script>
const hamburgerWrapper = document.getElementById('hamburger-wrapper');
const hamburgerIcon = document.getElementById('hamburger-icon');
const menuList = document.getElementById('menu-list');

hamburgerWrapper.addEventListener('mouseenter', function() {
  menuList.classList.remove('hidden');
});

hamburgerWrapper.addEventListener('mouseleave', function(event) {
  // マウスがメニュー内にある場合は、メニューが非表示にならないようにする
  if (!menuList.contains(event.relatedTarget)) {
    menuList.classList.add('hidden');
  }
});

menuList.addEventListener('mouseenter', function() {
  // メニュー内にカーソルがある間はメニューが非表示にならないようにする
  menuList.classList.remove('hidden');
});

menuList.addEventListener('mouseleave', function(event) {
  // メニュー内からカーソルが離れた場合はメニューを非表示にする
  if (!hamburgerWrapper.contains(event.relatedTarget)) {
    menuList.classList.add('hidden');
  }
});
</script>